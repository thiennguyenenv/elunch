$ ->
  @loadTable = (source) ->
    shiftId = $(source).data('shift')
    targetUrl = if $(source).data('vegan') == true then '/list-vegan-tables/' else '/list-tables/'
    $.ajax
      url: targetUrl + shiftId
      type: 'GET'
      dataType: 'html'
      success: (data) ->
        $("#tables-panel").html(data)

  $(document).on "ready page:load", ->
    $("#shifts-list label:first").click()
