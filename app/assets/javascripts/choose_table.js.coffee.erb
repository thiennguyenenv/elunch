$ ->
  @loadTable = (source) ->
      shiftId = $(source).data('shift')
      $.ajax
        url: '/list-tables/' + shiftId
        type: 'GET'
        dataType: 'html'
        success: (data) ->
          $("#tables-panel").html(data)

  $(document).on "ready page:load", ->
    $("#shifts-list label:first").click()
