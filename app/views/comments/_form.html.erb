<div class="panel-flat">
  <div class="header">
    <h3><%= @comment.new_record? ? "Create Comment" : "Update Comment" %></h3>
  </div>
  <div class="content">
    <%= form_for(@comment, html: {class: 'form-horizontal'}) do |f| %>
      <%= error_messages(@comment) %>
      <div class="form-group">
        <%= f.label :title, class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :comment, class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.text_area :comment, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :meal_date, "Lunch Date", class: "col-sm-3 control-label" %>
        <div class="col-sm-3">
          <div class='input-group date' id='dp_start_time'>
            <%= f.text_field :meal_date, class: "form-control" %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
          <% if @comment.new_record? %>
            <%= f.submit "Create", class: "btn btn-success" %>
          <% else %>
            <%= f.submit "Update", class: "btn btn-success" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<script type="text/javascript">
  $(function () {
      $('#comment_meal_date').datetimepicker({
        format: 'MMMM Do YYYY'
      });
  });
</script>
