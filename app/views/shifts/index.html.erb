<div class="panel-flat">
  <div class="header">
    <h3>Shifts</h3>
  </div>
  <div class="content">
    <div class="row">
      <%= link_to 'New Shift', new_shift_path, class: "btn btn-primary" %>
    </div>
    <div class="row">
      <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Start time</th>
              <th>End time</th>
              <th colspan="3">Action</th>
            </tr>
          </thead>

          <tbody>
            <% @shifts.each do |shift| %>
              <tr>
                <td><%= shift.name %></td>
                <td><%= shift.description %></td>
                <td><%= shift.try(:start_time).try(:strftime, '%I:%M %p') %></td>
                <td><%= shift.try(:end_time).try(:strftime, '%I:%M %p') %></td>
                <td><%= link_to 'Show', shift %></td>
                <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
                <td><%= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <%= paginate @shifts %>
    </div>
  </div>
</div>
