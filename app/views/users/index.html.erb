<div class="panel-flat">
  <div class="header">
    <h3>Users</h3>
  </div>
  <div class="content">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Avatar</th>
            <th>Email</th>
            <th>Full Name</th>
            <th>Admin?</th>
            <th colspan="2">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= image_tag user.avatar.nil? ? '' : user.avatar.url, class: "img-thumbnail", style: "width: 100px; height: 100px;"%></td>
              <td><%= user.email %></td>
              <td><%= user.first_name + ' ' + user.last_name %></td>
              <td><%= user.admin? ? 'yes' : 'no' %></td>
              <td><%= link_to 'Edit', edit_user_path(user) %></td>
              <td><%= link_to 'Destroy', users_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
