<div class="panel-flat">
  <div class="header">
    <h3>Dishes</h3>
  </div>
  <div class="content">
    <div class="row">
      <%= link_to "New Dish", new_dish_path, class: "btn btn-primary" %>
    </div>
    <div class="row">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Thumbnail</th>
              <th>Name</th>
              <th>Description</th>
              <th>Rating</th>
              <th>Dish type</th>
              <th colspan="3">Action</th>
            </tr>
          </thead>

          <tbody>
            <% @dishes.each do |dish| %>
              <tr>
                <td><%= image_tag dish.pictures[0].nil? ? '' : dish.pictures[0].image.url, class: "img-thumbnail", style: "width: 100px; height: 100px;"%></td>
                <td><%= dish.name %></td>
                <td><%= dish.description %></td>
                <td><%= dish.rating %></td>
                <td><%= dish.category_id %></td>
                <td><%= link_to 'Show', dish %></td>
                <td><%= link_to 'Edit', edit_dish_path(dish) %></td>
                <td><%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <%= paginate @dishes %>
    </div>
  </div>
</div>
