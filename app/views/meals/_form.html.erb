<%= form_for(@meal, html: { class: 'panel panel-primary form-horizontal', multipart: true }) do |f| %>
  <div class="panel-heading">
    <span class="panel-title">Creat Meal</span>
  </div>
  <div class="panel-body">
    <% if @meal.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@meal.errors.count, "error") %> prohibited this meal from being saved:</h2>

        <ul>
        <% @meal.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :description, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :rating, class: "col-sm-2 control-label" %>
      <div class=col-sm-10>
        <%= f.text_field :rating, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :meal_type_id, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.number_field :meal_type_id, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :pictures, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= file_field_tag "images[]", type: :file, multiple: true %>
      </div>
    </div>
  </div>
  <div class="panel-footer text-right">
    <%= f.submit "Create", class: "btn btn-primary" %>
  </div>
<% end %>
