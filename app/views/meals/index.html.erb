<div class="panel-flat">
  <div class="header">
    <h3>Dishes</h3>
  </div>
  <div class="content">
    <div class="row">
      <%= link_to "New Meal", new_meal_path, class: "btn btn-primary" %>
    </div>
    <div class="row">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Meal Date</th>
              <th>Preordered Meals</th>
              <th>Actual Meals</th>
              <th>Extra Meals</th>
              <th>Absence With Notice</th>
              <th colspan="3">Action</th>
            </tr>
          </thead>

          <tbody>
            <% @meals.each do |meal| %>
              <tr>
                <td><%= meal.meal_date.strftime("%d/%m/%Y") %></td>
                <td><%= meal.preordered_meals %></td>
                <td><%= meal.actual_meals %></td>
                <td><%= meal.extra_meals %></td>
                <td><%= meal.absence_with_notice %></td>
                <td><%= link_to 'Show', meal %></td>
                <td><%= link_to 'Edit', edit_meal_path(meal) %></td>
                <td><%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
