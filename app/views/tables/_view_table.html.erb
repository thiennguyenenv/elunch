<p><%= current_user.tables.to_json %> </p>
<div class="row">
  <div class="outer-circle col-md-4">
    <ul class=<%= "circle-container-#{view_table.seats}" %> >
      <% view_table.cached_seats.each do |user| %>
        <li>
          <a href='#'><img src="<%= user[:avatar_url] %>"/></a>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="col-md-7">
    <div class="panel panel-seat form-horizontal">
      <div class="panel-heading">
        <span class="panel-title">Seats Information</span>
      </div>
      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th class="col-md-1 col-xs-1">#</th>
            <th class="col-md-12 col-xs-12">Name</th>
          </tr>
        </thead> 
        <tbody class="valign-middle">
          <% view_table.cached_seats.each_with_index do |user, index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td>
                <img src="<%= user[:avatar_url] %>"/>
                <span>
                  <%= user[:first_name] + " " + user[:last_name] %>
                </span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="panel-footer text-right">
        <%= form_for current_user, url: users_join_table_path, method: :put do |f| %>
          <%= f.hidden_field :table_id, value: view_table.id %>
          <%= f.submit 'Join', class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
