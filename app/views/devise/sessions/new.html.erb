<div id="background">
  <%= image_tag("lunch_background.jpg") %>
</div>
<div class="center-container">
  <div class="center-header">
    <a href="<%= root_path %>" class="small-logo">
      <%= image_tag("logo.png") %>
      ELunch Sign in
    </a>
  </div>

  <div class="signin-form">
    <%= render 'flashes' %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'panel form-horizontal' }) do |f| %>
      <div class="form-group w-icon">
        <%= f.email_field :email, autofocus: true, class: "form-control input-lg", placeholder: "Enter email address" %>
        <span class="fa fa-user signin-form-icon"></span>
      </div>
      <div class="form-group w-icon">
        <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: "Enter password" %>
        <span class="fa fa-lock signin-form-icon"></span>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me, class: "remember-me" %></div>
      <% end -%>

      <div>
        <%= f.submit "Log in", class: "signin-btn bg-primary" %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forgot-password" %><br />
        <% end -%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
