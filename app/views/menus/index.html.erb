<div class="panel-flat">
  <div class="header">
    <h3>Menus</h3>
  </div>
  <div class="content">
    <div class="row">
      <%= link_to "New Menu", new_menu_path, class: "btn btn-primary" %>
    </div>
    <div class="row">
      <div class="table-responsive">
        <table class="table table-bordered table-stripe table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Rating</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @menus.each do |menu| %>
              <tr>
                <td><%= menu.name %></td>
                <td><%= menu.description %></td>
                <td><%= menu.rating %></td>
                <td><%= link_to 'Show', menu %></td>
                <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
                <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
